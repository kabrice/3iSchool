<div  >
    <div class="panel panel-default course-pointer">
        <a href="/lectureContenu/{[{contenu.id}]}">
            <div class="panel-heading">
                <img ng-src="{{ asset('{[{contenu.imageRoot}]}') }}" class="img-wrapper " />
            </div>
        </a>
        <div class="caption-wrapper">
            <div class="title-course">{[{contenu.titre | limitTo:25}]}
                <span ng-if="contenu.titre.length > 25">&hellip;</span>
            </div>
            <div class="course">{[{contenu.rubrique.libelle | limitTo:25}]}
                <span ng-if="contenu.rubrique.libelle.length > 25">&hellip;</span>
                <div style="float: right;display: inline-block">{[{contenu.sousRubrique.libelle}]}</div>
            </div>
            <div style="display: flex">
                <div style="color: orangered;" >
                    <i class="fa fa-heart fa-1x" aria-hidden="true"></i>
                </div>
                <div style="margin-left: 18px; color: orangered;">
                    {[{contenu.nombreLike}]} j'aime
                </div>
            </div>
            <div class="caption-item-content">
                <div hidden>{[{contenu.userContenus[1].nbreVue}]} vues</div>
                <div class="course-view">{[{contenu.nombreVueTotal}]} vues</div>
                <div class="course-date">{[{contenu.datePublication | date:'dd MMM yyyy Ã  HH : mm'}]}</div>
            </div>
        </div>
    </div>
</div>